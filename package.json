{
  "name": "turnout",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "postinstall": "prisma generate",
    "dev": "sst dev --stage ${SST_STAGE:-$(whoami)}",
    "deploy": "sst deploy --stage ${SST_STAGE:-$(whoami)}",
    "build": "pnpm --filter @turnout/web build",
    "test": "sst shell --stage ${SST_STAGE:-$(whoami)} -- sh -c 'pnpm test:unit && pnpm test:e2e'",
    "test:unit": "vitest run",
    "test:e2e": "playwright test",
    "db:migrate": "sst shell --stage ${SST_STAGE:-$(whoami)} -- prisma migrate dev",
    "db:studio": "sst shell --stage ${SST_STAGE:-$(whoami)} -- prisma studio",
    "db:push": "sst shell --stage ${SST_STAGE:-$(whoami)} -- prisma db push",
    "db:generate": "prisma generate",
    "prod:deploy": "sst deploy --stage prod",
    "typecheck": "tsc -p apps/web/tsconfig.json --noEmit && tsc -p apps/functions/tsconfig.json --noEmit",
    "debug:usercheck": "echo ${SST_STAGE:-$(whoami)}"
  },
  "devDependencies": {
    "@playwright/test": "^1.42.0",
    "@prisma/client": "^5.10.0",
    "@types/google.maps": "^3.58.1",
    "@types/react": "18.3.13",
    "@types/react-dom": "18.3.1",
    "next": "14.2.35",
    "pino-pretty": "^13.1.3",
    "prisma": "^5.10.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sst": "^3.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.3.0"
  },
  "prisma": {
    "schema": "lib/db/schema.prisma"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "prisma",
      "esbuild"
    ]
  },
  "dependencies": {
    "@vis.gl/react-google-maps": "^1.7.1",
    "date-fns-tz": "^3.2.0",
    "libphonenumber-js": "^1.12.37",
    "nanoid": "^3.3.11",
    "neverthrow": "^8.2.0",
    "pino": "^10.3.1",
    "twilio": "^5.12.2",
    "unique-names-generator": "^4.7.1"
  }
}